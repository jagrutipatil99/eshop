<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/templatemo.css">
    <link rel="stylesheet" href="~/Content/assets/css/custom.css">

    <!-- Load fonts style after rendering the layout styles -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="~/Content/assets/css/fontawesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="controller">
        <!-- Header -->
        <nav class="navbar navbar-expand-lg navbar-light shadow">
            <div class="container d-flex justify-content-between" style="margin:0 0 0 0">

                <a class="navbar-brand text-success logo h1 " href="">
                    EShopping
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between" id="templatemo_main_nav">
                    <div class="flex-fill">
                        <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                            <li class="nav-item">
                                @Html.ActionLink("Home", "Index")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("About", "About")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Products", "ProductDetails")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Contact", "Contact")
                            </li>
                        </ul>
                    </div>
                    @*<div class="navbar glyphicon-align-right d-flex">
                    <div class="d-lg-none flex-sm-fill mt-3 mb-4 col-7 col-sm-auto pr-3">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputMobileSearch" placeholder="Search ...">
                            <div class="input-group-text">
                                <i class="fa fa-fw fa-search"></i>
                            </div>
                        </div>
                    </div>*@
                    <div style="margin:20px 0 4px 700px">
                        <a class="nav-icon d-none d-lg-inline" href="#" data-bs-toggle="modal" data-bs-target="#templatemo_search" style="margin:20px 5px 4px 0px">
                            <i class="fa fa-fw fa-search text-dark mr-2"> </i>
                        </a>
                        <a class="nav-icon position-relative text-decoration-none" href="#" style="margin:20px 5px 4px 0px">
                            <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"> </i>
                            <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">7</span>
                        </a>
                        <a class="nav-icon position-relative text-decoration-none" href="https://localhost:44354/Home/RegistrationCustomer" style="margin:20px 5px 5px 8px">
                            <i class="fa fa-fw fa-user text-dark mr-3"> </i>

                            @*<span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">+99</span>*@
                        </a>
                    </div>
                </div>

            </div>
        </nav>
        <!-- Close Header -->
        @RenderBody()
    </div>


    <!-- Start Script -->
    <script src="~/Content/assets/js/jquery-1.11.0.min.js"></script>
    <script src="~/Content/assets/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/templatemo.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>
    <!-- End Script -->
</body>
</html>
